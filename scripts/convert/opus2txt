use FindBin qw($Bin);
use lib "$Bin/../../lib";
use OPUS::Tools;
use XML::Parser;



my $dir = shift(@ARGV);
$dir=~s/\.zip$//;

binmode(STDOUT, ":utf8");
my $ErrorCount=0;
my $firstline=1;
foreach my $doc (find_opus_documents($dir)){
    my $fh;
    die "cannot open $doc!\n" unless (&open_opus_document(\$fh,$dir,$doc));

    $XmlParser = new XML::Parser(Handlers => {Start => \&XmlTagStart,
					      End => \&XmlTagEnd,
					      Char => \&XmlChar});
    $XmlHandler = $XmlParser->parse_start;

    while (defined(my $line = $fh->getline())){

	$line=~s/[\x00-\x08\x0B\x0C\x0E-\x1F]//g;     ## remove control characters
	$line=~s/&(?!(#\d+|\w+);)/&amp;/g;            ## fix un-escaped XML entities

	eval { $XmlHandler->parse_more($line); };
	if ($@){
	    $ErrorCount++;
	    #	warn $@;              # skip millions of warnings!
	    #	print STDERR $_;
	}
    }

    $XmlHandler->parse_done if ($XmlHandler);

}

print STDERR "$ErrorCount errors found!" if ($ErrorCount);




sub XmlTagStart{
    my ($p,$e,%a)=@_;
    if ($e eq 'w'){
	$p->{STRING} = '';
	$p->{TOKENIZED} = 1;
    }
    elsif ($e eq 's'){
	@{$p->{WORDS}}=() if ($p->{TOKENIZED});
	$p->{STRING} = '';
    }
}

sub XmlChar{
    my ($p,$c)=@_;
    if (exists $p->{STRING}){
	$p->{STRING}.=$c;
    }
}

sub XmlTagEnd{
    my ($p,$e)=@_;
    if ($e eq 'w'){
	push (@{$p->{WORDS}},$p->{STRING}) if (exists $p->{STRING});
	delete $p->{STRING};
    }
    elsif ($e eq 's'){
	if (@{$p->{WORDS}}){
	    $p->{STRING} = join(' ',@{$p->{WORDS}});
	}
	$p->{STRING}=~s/^\s+//;
	$p->{STRING}=~s/\s+$//;
	$p->{STRING}=~s/\s{2,}/ /gs;
	print $p->{STRING},"\n" if ($p->{STRING});
	delete $p->{STRING};
    }
}
